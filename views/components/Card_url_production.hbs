    <p class='lead mb-0'>{{url.originURL}}</p>
    <a
      href='https://stormy-meadow-07873.herokuapp.com/redirect/{{url.shortURL}}'
      target='_blank'
      class='nav-link fs-4 px-0'
    >
      https://stormy-meadow-07873.herokuapp.com/redirect/{{url.shortURL}}
    </a>

    <div class='mt-2'>
      <a href='/eliminar/{{url._id}}' class='btn btn-danger'>Eliminar</a>
